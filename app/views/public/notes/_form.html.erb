<%# タイトル（新規投稿/投稿編集） %>
<h2><%= title %></h2>

<%= form_with model: note do |f| %>
  <%= f.submit class: "btn btn-primary mb-1"%>
  <h4><%= f.label :title %></h4>
  <%= f.text_field :title, class: "form-control" %>

  <h4><%= f.label :tag %></h4>
  <%= f.text_field :tag, class: "form-control" %>
 
  <h4><%= f.label :content %></h4>
  <%= f.text_area :content, id: "editor", class: "form-control w100 mb-1", rows: "5" %><br>
<% end %>
