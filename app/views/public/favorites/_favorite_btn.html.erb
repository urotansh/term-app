<% if note.favorited_by?(current_user) %>
  <%= link_to(note_favorites_path(note.id), method: :delete, remote: true, class: "text-danger") do %>
    <i class="fas fa-heart"></i><%= note.favorites.count %>
  <% end %>
<% else %>
  <%= link_to(note_favorites_path(note.id), method: :post, remote: true, class: "text-primary") do %>
    <i class="fas fa-heart"></i><%= note.favorites.count %>
  <% end %>
<% end %>
